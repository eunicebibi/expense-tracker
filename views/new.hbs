<div class="container">
  <form action="/" method="POST" class="new">
    <div class="col-md-6">
      <div name="new-remind">*必填欄位</div>
      <span name="new-title">請輸入你的支出</span>
    </div>
    <div class="col-md-6" >
      <label for="name" class="form-label">名稱<span class="text-danger">*</span></label>
      <input type="text" class="form-control" id="name" placeholder="請輸入花費名稱" name="name" required>
    </div>
    <div class="col-md-6">
      <label for="date" class="form-label">日期<span class="text-danger">*</span></label>
      <input type="date" class="form-control" id="date" placeholder="請輸入英文店名" name="date" value="" required>
    </div>
    <div class="col-md-6">
      <label for="caterogy" class="form-label">類別<span class="text-danger">*</span></label>
      <select name="category" id="category" class="form-control">
        <option selected>類別</option>
        <option value="1">家居物業</option>
        <option value="2">交通出行</option>
        <option value="3">休閒娛樂</option>
        <option value="4">餐飲食品</option>
        <option value="5">其他</option>
      </select>
    </div>
    <div class="col-md-6">
      <label for="amount" class="form-label">金額<span class="text-danger">*</span></label>
      <input type="text" class="form-control" id="amount" placeholder="請輸入數字" name="amount" required>
    </div>
    <div class="text-center">
      <button type="submit" class="btn btn-primary" name="new">
        新增支出
      </button>
      <a href="/">
        <button type="button" class="btn btn-outline-secondary">
          返回首頁
        </button>
      </a>
      {{! 使用type="reset" 可以清除/還原輸入 }}
      <button type="reset" class="btn btn-outline-danger">重新輸入</button>
    </div>
  </form>
</div>